<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:squint="http://schemas.android.com/apk/res-auto"
    xmlns:wave="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.john.waveview.WaveView
        android:id="@+id/main_wave"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        wave:above_wave_color="@android:color/white"
        wave:blow_wave_color="@android:color/white"
        wave:wave_height="little"
        wave:wave_hz="normal"
        wave:wave_length="middle" />

    <com.intrusoft.squint.DiagonalView
        android:id="@+id/main_diagonal_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        squint:angle="15"
        squint:gravity="left"
        squint:scaleType="centerCrop"
        squint:src="@drawable/castillo_mota" />

    <com.rerijaapps.sanapptolin.widgets.TextViewSanFranciscoBold
        android:id="@+id/main_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/main_diagonal_view"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_shape_primary_color"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:textColor="@color/white"
        android:textSize="16sp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/main_diagonal_view"
        android:overScrollMode="never" />

    <ImageView
        android:id="@+id/main_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:padding="15dp"
        android:background="@drawable/circle_shape_white_color"
        android:src="@drawable/splash_icon"/>

    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        android:id="@+id/main_loader"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:indeterminate="true"
        android:visibility="gone"/>

</RelativeLayout>

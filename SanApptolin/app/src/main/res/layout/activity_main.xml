<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/centerScreenVertical"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_image" />

    <com.flaviofaria.kenburnsview.KenBurnsView
        android:id="@+id/app_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/centerScreenVertical"
        android:scaleType="centerCrop" />

    <View
        android:id="@+id/centerScreenVertical"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/app_image"
        android:background="@drawable/shadow" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/main_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:overScrollMode="never" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/main_icon"
            android:layout_alignBottom="@+id/main_icon"
            android:background="@drawable/rounded_shape_primary_color"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.rerijaapps.sanapptolin.Widgets.TextViewSanFranciscoBold
                android:id="@+id/main_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <com.rerijaapps.sanapptolin.Widgets.SwitchSanFranciscoRegular
                android:id="@+id/main_switch_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:switchPadding="10dp"
                android:text="Musica"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/main_audio_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/audio_animation" />

        </LinearLayout>

        <ImageView
            android:id="@+id/main_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="16dp"
            android:background="@drawable/circle_shape_gray_color"
            android:padding="15dp"
            android:src="@drawable/splash_icon" />

        <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            android:id="@+id/main_loader"
            android:layout_width="102dp"
            android:layout_height="102dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:indeterminate="true"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>
